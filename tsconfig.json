{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "types/*",
    "src/**/*",
    "src/**/*.vue",
    "packages/**/*",
    "packages/**/*.vue"
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "module": "NodeNext",
    "moduleResolution": "Node",
    "skipLibCheck": true
    // "noImplicitAny": false
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}